<div class="page-header">
<h1> All Statuses</h1>
</div>

<strong><font size="2"><%= link_to "Post a New Status", new_status_path %></font></strong>
<br>
<br>

<% @statuses.each do |status| %>
<div class="container">
<div class= "status">

  <strong><font size="4"><%= status.name %></font size></strong>
  <br>
  <p><%= status.content %></p>
  <div class="meta">
      <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
      <span class="admin">
       | <%= link_to "Edit", edit_status_path(status) %> |
        <%= link_to "Delete", status, method: :delete, data: { confirm: "Are you sure you want to delete this status?"} %> |
        <%= link_to "New", new_status_path %> |
      </span>
  </div>
</div>
</div>
</div>

<% end %>

